                <input type="text" name="usuario" required> <!-- Agrega el atributo name -->
                <span></span>
                <label>Usuario</label>
            </div>
            <div class="txt_field">
                <input type="password" name="contrasena" required> <!-- Agrega el atributo name -->
                <span></span>
                <label>Contraseña</label>
            </div>
            <div class="pass">Olvidaste tu contraseña?</div>
            <input type="submit" value="Login">
            <div class="signup_link">
                No tienes cuenta? <a href="http://localhost:3000/usuarios/crear">Registrate</a>
            </div>
        </form>
