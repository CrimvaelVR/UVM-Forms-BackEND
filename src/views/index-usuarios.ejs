<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UVM Forms</title>
    <link rel="shortcut icon" href="resources/uvmicon.png">
    <link rel="stylesheet" href="../styles/styles.css">
    <link rel="stylesheet" href="../styles/index.css">
    <link rel="stylesheet" href="../styles/footer.css">
    <link rel="stylesheet" href="../styles/header.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>

    <header>
        <div class="header">
          <a href="#" class="logo"><img src="/resources/uvm.png" alt="Logo">
            <p>UVM Forms</p>
          </a>
          <!-- Los divs para crear la clase hamburguesa, como pseudoelementos -->
          <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
          </div>
    
          <div class="header-right">
            <a href="/" id="inicio">Inicio</a>
            <a href="/index" id="formularios">Mis formularios</a>
            <a href="/contacto" id="contactos">Contacto</a>
      
            <i class='bx bx-user-circle' id="profileIcon"></i> <p> <%- user %></p>
          </div>
          </div>
        </div>
      </header>
      <script src="/scripts/header.js"></script>


    <main>
        <form action="/index/disconnect" method="POST">
            <button type="submit">Logout</button>
          </form>


        <p class="formsText">Tus formularios</p>
        <div class="forms">

            <a class="cardFormNuevo" href="/formularios/crear" id="createButton"> 
                <p class="formTitleNuevo"> Crear nuevo formulario</p>
                <i class='bx bx-plus' id="plusIcon"></i>
            </a>

                <% for (i = 0; i < formularios.length; i++) { %>
                    <div class="cardForm">
                        <p class="formTitle"><%= formularios[i].titulo %></p>
                        <p class="formDescription"><%= formularios[i].descripcion %></p>
                        <a href="/formularios/<%= formularios[i]._id %>" style="text-decoration: none; color: white; background-color: #88c426; padding: 10px; border-radius: 30px; margin-top: 20px;">Ver respuestas</a>
                    </div>
                <% } %>

      
        </div>
    </main>

    <footer class="footer">
        <!-- Primer nivel: logo de la compañía -->
        <img src="resources/uvm.png" alt="Logo de la compañía" class="footer-logo">
        <!-- Segundo nivel: navegación -->
        <nav class="footer-nav">
          <!-- Primera columna: inicio, sobre nosotros, contacto -->
          <div class="footer-nav-column">
            <a href="#" class="footer-nav-link">Inicio</a>
            <a href="https://uvm.edu.ve/identidad-uvm/" class="footer-nav-link">Sobre nosotros</a>
            <a href="https://uvm.edu.ve/normativa-uvm/" class="footer-nav-link">Historia</a>
          </div>
          <!-- Segunda columna: -->
          <div class="footer-nav-column">
            <a href="https://uvm.edu.ve/estructura-universitaria/" class="footer-nav-link">Estructura Universitaria</a>
            <a href="https://uvm.edu.ve/normativa-uvm/" class="footer-nav-link">Normativa</a>
            <a href="https://uvm.edu.ve/investigacion-y-extension/" class="footer-nav-link">Investigación y Extensión</a>
          </div>
        <!-- Tercer nivel: redes sociales -->
        <div class="footer-social">
          <!-- Icono de Facebook -->
          <a href="https://www.facebook.com/univalledelmomboy/?locale=es_LA" class="footer-social-icon">
            <i class="fa-brands fa-facebook"></i>
          </a>
          <!-- Icono de Twitter -->
          <a href="https://twitter.com/univallemomboy?lang=es" class="footer-social-icon">
            <i class="fa-brands fa-twitter"></i>
          </a>
          <!-- Icono de Instagram -->
          <a href="https://www.instagram.com/univalledelmomboy/" class="footer-social-icon">
            <i class="fa-brands fa-instagram"></i>
          </a>
          <!-- Icono de YouTube -->
          <a href="https://www.youtube.com/channel/UCyPGGFu2WNlBP1BMvholYWA" class="footer-social-icon">
            <i class="fa-brands fa-youtube"></i>
          </a>
        </div>
        <!-- Cuarto nivel: detalles legales -->
        <div class="footer-legal">
          <!-- Primera columna: derechos reservados -->
          <div class="footer-legal-column">
            <p class="footer-legal-text">&copy; 2023 Universidad "Valle del Momboy"</p>
          </div>
          <!-- Segunda columna: términos y condiciones -->
          <div class="footer-legal-column">
            <p class="footer-legal-text"><a href="https://revistav.uvm.edu.ve/articulos/cs07s7Articulo1vol13num12019.pdf">Términos y condiciones</a></p>
          </div>
          <!-- Tercera columna: política de privacidad -->
          <div class="footer-legal-column">
            <p class="footer-legal-text"><a href="https://repositorio.uvm.edu.ve/items/b8397abb-5c25-4557-994b-a1a6fbd3d4ce">Reglamento</a></p>
          </div>
        </div>
      </footer>



    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script>
        const buscar = document.getElementById('buscar');
        const textoBuscar = document.getElementById('textoBuscar');

        function asignarURL() {
            const textoBuscarr = textoBuscar.value;
            buscar.href = '/busqueda/' + textoBuscarr;
        }

        buscar.addEventListener('click', asignarURL);

        textoBuscar.addEventListener("keydown", function(event) {

            if (event.keyCode == 13) {
                buscar.click();
            }
        });


    </script>

</body>
</html>